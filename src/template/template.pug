doctype html
html(lang="en-US")
	head 
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(http-equiv="Content-Type", content="text/html;charset=utf-8")
		meta(
			http-equiv="Content-Security-Policy",
			content="style-src 'self' https://mckay.la https://fonts.googleapis.com/ https://unicons.iconscout.com/; font-src 'self' https://mckay.la https://fonts.gstatic.com/ https://unicons.iconscout.com/;"
		)

		link(
			rel="icon",
			type="image/vnd.microsoft.icon",
			href="/resources/favicon.ico"
		)
		link(
			rel="shortcut icon",
			type="image/vnd.microsoft.icon",
			href="/resources/favicon.ico"
		)

		link(
			rel="stylesheet",
			type="text/css",
			href="https://unicons.iconscout.com/release/v1.0.0/css/unicons.css"
		)

		link(rel="stylesheet", type="text/css", href="/resources/oui/oui.sass")
		link(rel="stylesheet", type="text/css", href="/resources/fonts/fonts.css")
		link(rel="stylesheet", type="text/css", href="/template/template.scss")

		block head
			title mckay.la

	body
		#logo
			h2: a(href="/") mckayla

		block body
			section.empty
				h1 This page has no content.
				p Sorry about that :(

		section#footer
			#copyright
				p &copy; 2020 &hearts; <a href="/">McKayla</a>
				h2.social-icons
					a.uil.uil-github.light-violet(
						title="Github",
						href="https://github.com/partheseas"
					)
					a.uil.uil-linkedin.dark-sky(
						title="LinkedIn",
						href="https://linkedin.com/in/mckaylawashburn"
					)
					a.uil.uil-instagram.pink(
						title="Instagram",
						href="https://instagram.com/partheseas"
					)
					a.uil.uil-twitter.light-sky(
						title="Twitter",
						href="https://twitter.com/partheseas"
					)

			div
				p: strong Open Source
				ul
					li
						a(href="https://github.com/partheseas/electron-redux/") electron-redux
						.tooltip Make sure all your stores are on the same page
					li
						a(href="https://github.com/partheseas/string-spirits/") string-spirits
						.tooltip Get the spirit of a string, without the whole thing
					li
						a(href="https://github.com/partheseas/unzzz/") unzzz
						.tooltip A lightweight library for unzipping zip files

			div
				p: strong Apps
				ul
					li: a(href="https://facet.ai") Facet
					li: a(href="/lavender/") Lavender
					li: a(href="/observatory/") Observatory

			div
				p: strong Doodles
				ul
					li: a(href="https://dangerous.now.sh") Dangerous
					li: a(href="https://lowowee.now.sh") Lowowee
					li: a(href="https://soroboro.now.sh") Ouroboros

		block scripts
